{
  "name": "xe-cli",
  "version": "1.0.2",
  "description": "A lightweight, universal package manager.",
  "main": "dist/index.js",
  "bin": {
    "xe": "bin/xe.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsx src/index.ts",
    "watch": "tsup src/index.ts --format esm --dts --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "check": "npm run tsc && npm run lint && npm run format:check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akdevv/xe-cli.git"
  },
  "keywords": [
    "cli",
    "package-manager",
    "npm",
    "pnpm",
    "yarn",
    "bun",
    "git",
    "docker"
  ],
  "author": "akdevv",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/akdevv/xe-cli/issues"
  },
  "homepage": "https://github.com/akdevv/xe-cli#readme",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "inquirer": "^12.10.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
